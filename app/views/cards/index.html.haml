.Account__page
  .Account__page__header
    = link_to image_tag("logo/logo.png", alt: "logo"), root_path
  .Account__page__main
    .Account__page__main__content
      .Field
        .Field__title
          クレジットカード
        .Field__label
          - if @card
            = "************" + @card[:last4]
            %br
            = @card[:exp_month]
            \/
            = @card[:exp_year]
            %br
            = @card[:brand]
            %br
            .submit-btn
              = link_to "削除する", card_path(current_user.card), method: :delete

          - else
            .submit-btn
              = link_to "クレジットカード登録", new_card_path 
                
        .submit-btn
          = link_to "マイページへ戻る", user_path(current_user.id)
            


= render "items/lower-photo"
= render "items/footer"

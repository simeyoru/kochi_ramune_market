.regist-display
  %header.user_regist-header
    %h1.user_regist-header__title
      = link_to root_path do
        = image_tag "logo/logo.png", width: "185px", hight: "49px"
    %nav.user_regist-header__active
      %ol.active_list
        %li
          会員情報
          .circle-gray
          .after__red
        %li
          プロフィール
          .circle-gray
          .before__red
          .after__red
        %li
          %span.active_page 商品お届け先住所
          .circle-red
          .before__red
          .after__gray
        %li
          完了
          .circle-gray
          .before__gray
  .user_regist-main
    %section.user_regist-main__center
      %h2.section__header
        商品お届け先住所
      = form_for @sending_destination do |f|
        = render "devise/shared/error_messages", resource: @sending_destination
        .field_all
          .field
            = f.label "お名前（全角）"
            %span.red_flame 必須
            %br/
            = f.text_field :destination_first_name, autofocus: true, placeholder: "例）フリマ", class: "form_name"
            = f.text_field :destination_last_name, placeholder: "例）星人", class: "form_name"
          .field
            = f.label "お名前カナ（全角）"
            %span.red_flame 必須
            %br/
            = f.text_field :destination_first_name_kana, placeholder: "例）フリマ", class: "form_name"
            = f.text_field :destination_last_name_kana, placeholder: "例）セイジン", class: "form_name"
          .field
            = f.label "郵便番号（ハイフンを除く）"
            %span.red_flame 必須
            %br/
            = f.text_field :post_code, placeholder: "例）0123456", class: "form_default"
          .field
            = f.label "都道府県"
            %span.red_flame 必須
            %br/
            = f.collection_select :prefecture, Prefecture.where.not(name: "未定"), :id, :name, {include_blank: '選択してください'}, {class: 'form_default'}
          .field
            = f.label "市区町村"
            %span.red_flame 必須
            %br/
            = f.text_field :city, placeholder: "例）千代田区○○町", class: "form_default"
          .field
            = f.label "番地"
            %span.red_flame 必須
            %br/
            = f.text_field :house_number, placeholder: "例）10番地2, 10-2", class: "form_default"
          .field
            = f.label "マンション・アパート名"
            %span.gray_flame 任意
            %br/
            = f.text_field :building_name, placeholder: "例）○○マンション 505号室", class: "form_default"
          .field
            = f.label "電話番号（ハイフンを除く）"
            %span.gray_flame 任意
            %br/
            = f.text_field :phone_number, placeholder: "例）09012345678", class: "form_default"
        .field_all
          .actions
            = f.submit "登録する", class: "submit_btn"
          .user_info
            %p
              = link_to "#" do
                本人情報の登録について
                = icon('fas','angle-right')
  = render "user_regist_footer"


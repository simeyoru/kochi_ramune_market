.regist-display
  = render 'devise/registrations/user_regist_header'
  .user_regist-main
    %section.user_regist-main__center
      %h2.section__header
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_user_registration_path
      .login_form
        %button#google_login Googleでログイン
        %button#facebook_login Facebookでログイン
        %button#apple_login Appleでログイン
      .Notification
        - flash.each do |key, value|
          = content_tag :div, value, class: key
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field_all
          .field
            = f.label "メールアドレス"
            %br/
            = f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form_default"
          .field
            = f.label "パスワード"
            %br/
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form_default"
          - if devise_mapping.rememberable?
            .field_check
              = f.check_box :remember_me
              = f.label :remember_me
        .field_all
          .actions
            = f.submit "ログイン", class: "submit_btn"
          .user_pass_forget
            %p
              = link_to "#" do
                パスワードをお忘れの方
  = render "devise/registrations/user_regist_footer"
